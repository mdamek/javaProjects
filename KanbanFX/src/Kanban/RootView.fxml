<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Kanban.KanbanController">
    <ListView fx:id="toDoList" layoutX="14.0" layoutY="88.0" prefHeight="500.0" prefWidth="200.0" onMouseClicked="#openDialogWindow"/>
    <ListView fx:id="inProgressList" layoutX="250.0" layoutY="88.0" prefHeight="500.0" prefWidth="200.0" onMouseClicked="#openDialogWindow"/>
    <ListView fx:id="doneList" layoutX="486.0" layoutY="88.0" prefHeight="500.0" prefWidth="200.0" onMouseClicked="#openDialogWindow"/>
    <Label layoutX="84.0" layoutY="49.0" text="TO DO">
        <font>
          <Font size="20.0" />
        </font>
    </Label>
    <Label layoutX="289.0" layoutY="49.0" text="IN PROGRESS">
        <font>
          <Font size="20.0" />
        </font>
    </Label>
    <Label layoutX="559.0" layoutY="49.0" text="DONE">
        <font>
          <Font size="20.0" />
        </font>
    </Label>
    <MenuBar prefHeight="25.0" prefWidth="700.0">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Close" onAction="#closeProgram"/>
        </Menu>
        <Menu mnemonicParsing="false" text="About">
            <MenuItem mnemonicParsing="false" text="Show" onAction="#showAbout"/>
        </Menu>
    </MenuBar>
    <Button fx:id="newTaskViewButton" layoutX="296.0" layoutY="638.0" mnemonicParsing="false"
            onAction="#openNewTaskWindow" prefHeight="38.0" prefWidth="108.0" text="Add new task" textOverrun="CENTER_ELLIPSIS">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
   <Button fx:id="moveTaskButton" layoutX="334.0" layoutY="600.0" mnemonicParsing="false" onAction="#moveTask" text="&gt;&gt;" />
</AnchorPane>
